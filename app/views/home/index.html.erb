<% title "Welcome!" %>
<div class="bs">
	<h2>Welcome to LabCollaborate</h2>
	<h3>The bitchin'-est academic social network on the interwebs!</h3>
</div>

<h2>Sign in</h2>

<%= form_for("user", :url => user_session_path) do |f| %>
  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>

  <p><%= f.submit "Sign in" %></p>
<% end %>

<p>Not yet a member? <%= link_to "Register", new_user_registration_path %>