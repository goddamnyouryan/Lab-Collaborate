<h2>Edit <%= resource_name.to_s.humanize %></h2>

<h3>Account Settings</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  <%= devise_error_messages! %>

  <p class="bs"><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <p class="bs"><%= f.label :new_password %> <i>(leave blank if you don't want to change it)</i><br />
  <%= f.password_field :password %></p>

  <p class="bs"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

	<h3>Profile</h3>
	
	<p class="bs"><%= f.label :first_name %><br />
  <%= f.text_field :first_name %></p>

	<p class="bs"><%= f.label :last_name %><br />
  <%= f.text_field :last_name %></p>
	
	<p class="bs"><%= f.label :phone_number %><br />
  <%= f.text_field :phone %></p>

  <p class="bs"><%= f.label :address %><br />
  <%= f.text_field :address %></p>

	<p class="bs"><%= f.label :research_interests %><br />
  <%= f.text_area :info, :style => "width:200px;height:60px" %></p>

	<p class="bs"><%= f.label :photo %><br />
  <%= f.file_field :photo %></p>

  <p class="bs"><%= f.submit "Update" %></p>
<% end %>

<h3>Cancel my account</h3>

<p class="bs">Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>

<%= link_to "Back", :back %>
