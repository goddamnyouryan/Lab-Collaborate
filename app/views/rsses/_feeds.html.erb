<li>
	<%= link_to entry.url, :target => "_blank" do %>
		<% unless entry.content.nil? && entry.summary.nil? %>
			<h3><%= entry.title %></h3>
			<% if entry.summary.nil? %>
				<p><%= entry.content.html_safe %></p>
			<% else %>
				<p><%= entry.summary.html_safe %></p>
			<% end %>
			<p class="ts" style="font-size:10px; color: #666;">from <%= entry.url %></p>
		<% end %>
			<div class="clear"></div>
	<% end %>
</li>
<div class="clear"></div>