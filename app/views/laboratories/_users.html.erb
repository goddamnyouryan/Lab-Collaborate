<ul class="bs" id="users">
	<% @laboratory.users.limit(12).each do |user| %>
		<li>
			<%= link_to user_path(user) do %>
				<%= image_tag user.photo.url(:tiny) %><br />
			<% end %>
			<span class="name"><%= link_to "#{user.name}", user_path(user) %></span>
		</li>
	<% end %>
</ul>

<div class="clear"></div>

<% if @laboratory.users.count > 6 %>
	<%= link_to "View all Lab Members(#{@laboratory.users.count})", laboratory_members_path(@laboratory), :class => "fr" %>
<% end %>