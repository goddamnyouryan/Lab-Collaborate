<% if user_signed_in? && current_user.id == 33 %>

<% title "Schools Admin" %>

<h2>Schools Admin</h2>

<ul class="ts">
	<% @schools.each do |school| %>
		<li>
			<%= school.name %> - 
			<%= link_to "delete", school, :method => :delete, :confirm => "Are you sure? This will delete all associated labs as well." %>
				<ul style="margin:0 0 25px 15px;">
					<% school.laboratories.each do |laboratory| %>
						<li>
							<%= link_to laboratory.name, laboratory %> -
							<%= link_to "delete", laboratory, :method => :delete, :confirm => "Are you sure you want to delete #{laboratory.name? }" %>				
						</li>
					<% end %>
				</ul>
		</li>
	<% end %>
</ul>

<% else %>

<% title "Schools Admin" %>

<h2>Browse Lab Collaborate Schools and Labs</h2>

<ul class="ts">
	<% @schools.each do |school| %>
		<li>
			<%= school.name %>
				<ul style="margin:0 0 25px 15px;">
					<% school.laboratories.each do |laboratory| %>
						<li>
							<%= link_to laboratory.name, laboratory %>	
						</li>
					<% end %>
				</ul>
		</li>
	<% end %>
</ul>

<% end %>